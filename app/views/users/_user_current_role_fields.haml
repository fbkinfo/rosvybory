.nested-fields.user-current-role{"data-role" => "user-fields-container"}
  = f.inputs do
    = f.input :current_role, include_blank: false, input_html: {"data-role" => "current-role", :style => "width: 350px;"}
    = f.input :nomination_source, input_html: {:style => "width: 350px;"}

    = f.input :region, as: :select, :collection => option_groups_from_collection_for_select(Region.adm_regions, :subregions_with_tics, :name, :id, :name, f.object.region.try(:id)), :input_html => {"data-role" => "region-select", :style => "width: 220px;"}, :label => "ТИК"

    = f.input :uic_number, as: :number, :label => raw("Номер УИК (<a href='http://www.wikiuiki.org/' target=\"_blank\">база</a>)."), input_html: {"data-role" => "uic", style: "width: 100px;", min: 1}
    = f.input :user_id, as: :hidden, input_html: {value: @user.id}
    = link_to_remove_association "удалить роль", f
